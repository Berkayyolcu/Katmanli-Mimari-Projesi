@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
           
            <h4 class="card-title">HİZMET GÜNCELLEME SAYFASI</h4>
            
            <form class="forms-sample" method="post">              
                @Html.HiddenFor(x=>x.ServiceID)
               
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label><br />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Title" id="exampleInputName1" placeholder="Başlık">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword4">Resim</label><br />
                    <span asp-validation-for="Icon" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Icon" placeholder="Görsel">
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label><br />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <textarea class="form-control" asp-for="Description" id="exampleTextarea1" rows="4"></textarea>
                </div>

                <button type="submit" class="btn btn-outline-warning me-2">Hizmet Güncelle</button>
            </form>

        </div>
    </div>
</div>