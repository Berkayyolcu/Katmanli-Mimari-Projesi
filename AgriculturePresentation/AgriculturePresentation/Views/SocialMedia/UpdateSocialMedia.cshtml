@model EntityLayer.Concrete.SocialMedia

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">SOSYAL MEDYA GÜNCELLEME</h4>
            <form class="forms-sample" method="post">
               
                @Html.HiddenFor(x => x.SocialMediaID)
               
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label><br />
                    <input type="text" class="form-control" asp-for="Title" id="exampleInputName1" placeholder="Sosyal Medya Adı">
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Url</label><br />
                    <input type="text" class="form-control" asp-for="Url" id="exampleInputName1" placeholder="Sosyal Medya Adı">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Icon</label><br />
                    <input type="text" class="form-control" asp-for="Icon" placeholder="Icon Adı">
                </div>

                <button type="submit" class="btn btn-outline-warning me-2">Sosyal Medya Güncelle</button>
            </form>
        </div>
    </div>
</div>