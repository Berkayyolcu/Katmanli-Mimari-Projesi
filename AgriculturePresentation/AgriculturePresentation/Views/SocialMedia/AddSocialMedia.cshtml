@model EntityLayer.Concrete.SocialMedia

@{
    ViewData["Title"] = "AddSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
           
            <h4 class="card-title">SOSYAL MEDYA EKLEME SAYFASI</h4>
          
            <form class="forms-sample" method="post">              
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label><br />
                    <input type="text" class="form-control" asp-for="Title" placeholder="Sosyal Medya Adı">
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Url</label><br />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Url" placeholder="Sosyal Medya Linki">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Icon</label><br />
                    <span asp-validation-for="Icon" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Icon" placeholder="Icon Adı">
                </div>

                <button type="submit" class="btn btn-outline-info me-2">Sosyal Medya Ekle</button>
            </form>

        </div>
    </div>
</div>