@model EntityLayer.Concrete.Image

@{
    ViewData["Title"] = "UpdateImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
           
            <h4 class="card-title">RESİM GÜNCELLEME</h4>
            
            <form class="forms-sample" method="post">              
                @Html.HiddenFor(x => x.ImageID)
                
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label><br />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Title" id="exampleInputName1" placeholder="Başlık">
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label><br />
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <textarea class="form-control"  asp-for="Description" id="exampleTextarea1" rows="4"></textarea>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Resim</label><br />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Resim Yolu">
                </div>

                <button type="submit" class="btn btn-outline-warning me-2">Resim Güncelle</button>
            </form>

        </div>
    </div>
</div>