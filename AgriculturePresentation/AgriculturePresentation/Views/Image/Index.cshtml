@using EntityLayer.Concrete
@model List<Image>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">RESİM LİSTESİ</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Resim</th>                           
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ImageID</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>
                                    <img src="@item.ImageUrl" style="width:150px; height:100px; border-radius:0"  />
                                </td>
                                <td><a href="/Image/DeleteImage/@item.ImageID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Image/UpdateImage/@item.ImageID" class="btn btn-outline-warning">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Image/AddImage/" class="btn btn-outline-info">Resim Ekle</a>
            </div>
        </div>
    </div>
</div>