@model EntityLayer.Concrete.About

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">HAKKIMIZDA BİLGİ GÜNCELLEME</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.AboutId)

                <div class="form-group">
                    <label for="exampleInputName1">Tarihcemiz</label>
                    <textarea class="form-control" asp-for="AboutHistory" id="exampleTextarea1" rows="4"></textarea>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Biz Kimiz</label>
                    <textarea class="form-control" asp-for="AboutUs" id="exampleTextarea1" rows="4"></textarea>
                </div>

                <button type="submit" class="btn btn-outline-warning me-2">Hakkımızda Bilgi Güncelle</button>
            </form>

        </div>
    </div>
</div>