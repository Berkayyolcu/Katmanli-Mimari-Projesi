@model EntityLayer.Concrete.Announcement

@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            
            <h4 class="card-title">DUYURU EKLEME SAYFASI</h4>
          
            <form class="forms-sample" method="post">
               
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label><br />
                    <input type="text" class="form-control" asp-for="Title" id="exampleInputName1" placeholder="Başlık">
                </div>
                
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label><br />
                    <textarea class="form-control" asp-for="Description" id="exampleTextarea1" rows="4"></textarea>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Tarih</label><br />
                    <input type="date" class="form-control" asp-for="Date" id="exampleInputName1" placeholder="Tarih">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword4">Resim</label><br />
                    <span asp-validation-for="Image" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Image" placeholder="Görsel">
                </div>

                <button type="submit" class="btn btn-outline-info me-2">Duyuru Ekle</button>
            </form>

        </div>
    </div>
</div>