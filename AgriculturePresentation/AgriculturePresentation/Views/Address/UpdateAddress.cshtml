@model EntityLayer.Concrete.Address

@{
    ViewData["Title"] = "UpdateAddress";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            
            <h4 class="card-title">ADRES GÜNCELLEME</h4>

            <form class="forms-sample" method="post">           
                @Html.HiddenFor(x => x.AddressID)
               
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 1</label>
                    <input type="text" class="form-control" asp-for="Description1" placeholder="Açıklama 1">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 2</label>
                    <input type="text" class="form-control" asp-for="Description2" placeholder="Açıklama 2">
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Açıklama 3</label>
                    <input type="text" class="form-control" asp-for="Description3" placeholder="Açıklama 3">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 4</label>
                    <input type="text" class="form-control" asp-for="Description4" placeholder="Açıklama 4">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Telefon Numarası</label>
                    <input type="text" class="form-control" asp-for="Phone" placeholder="Telefon Numarası">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Mail Adresi</label>
                    <input type="text" class="form-control" asp-for="Mail" placeholder="Mail Adresi">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Harita Konumu </label>
                    <input type="text" class="form-control" asp-for="Mapinfo" placeholder="Harita Konumu">
                </div>

                <button type="submit" class="btn btn-outline-warning me-2">Adres Güncelle</button>
            </form>

        </div>
    </div>
</div>