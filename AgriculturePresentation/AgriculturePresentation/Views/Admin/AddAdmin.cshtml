@model EntityLayer.Concrete.Admin

@{
    ViewData["Title"] = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
           
            <h4 class="card-title">ADMİN EKLEME</h4>
           
            <form class="forms-sample" method="post">
               
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adı</label><br />
                    <input type="text" class="form-control" asp-for="Username" placeholder="Kullanıcı Adı">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Şifre</label><br />
                    <input type="password" class="form-control" asp-for="Password" placeholder="Şifre Giriniz">
                </div>

                <button type="submit" class="btn btn-outline-info me-2">Admin Ekle</button>
            </form>

        </div>
    </div>
</div>