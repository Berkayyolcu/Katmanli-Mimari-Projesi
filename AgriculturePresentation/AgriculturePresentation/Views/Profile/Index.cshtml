@model AgriculturePresentation.Models.UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            
            <h4 class="card-title">PROFİL GÜNCELLEME SAYFASI</h4>
           
            <form class="forms-sample" method="post">              
                <div class="form-group">
                    <label for="exampleInputName1">Mail Adresi</label><br />
                    <input type="text" class="form-control" asp-for="Mail" id="exampleInputName1" placeholder="Başlık">
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Telefon Numarası</label><br />
                    <input type="password" class="form-control" asp-for="Phone" id="exampleInputName1" placeholder="Telefon Numarası">
                </div>


                <div class="form-group">
                    <label for="exampleTextarea1">Şifreniz</label><br />
                    <input type="password" class="form-control" asp-for="Password" id="exampleInputName1" placeholder="Şifreniz">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Şifreniz Tekrar </label><br />
                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Şifreniz Tekrar Giriniz">
                </div>

                <button type="submit" class="btn btn-outline-warning me-2">Profil Güncelle</button>
            </form>

        </div>
    </div>
</div>