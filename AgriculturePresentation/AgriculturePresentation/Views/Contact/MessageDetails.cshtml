@model EntityLayer.Concrete.Contact

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            
            <h4 class="card-title">MESAJ DETAYI</h4>
            
            <form class="forms-sample" method="post">            
                @Html.HiddenFor(x => x.ContactID)
               
                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Adı Soyadı" disabled>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Mail Adresi</label>
                    <input type="text" class="form-control" asp-for="Mail" placeholder="Mail Adresi" disabled>
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Mesajı</label><br />
                    <textarea class="form-control" asp-for="Message" id="exampleTextarea1" rows="4" disabled></textarea>
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Gönderim Zamanı</label>
                    <input type="text" class="form-control" asp-for="Date" placeholder="Gönderim Zamanı" disabled>
                </div>
            </form>

        </div>
    </div>
</div>